<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addCss">
                <name>css/warranty/custom_styles.css</name>
            </action>
        </reference>
    </default>
    <cms_index_index>
        <reference name="head">
            <block type="core/text" name="extend.sdk.client">
                <action method="setText" ifconfig="warranty/enableExtend/enable">
                    <text>
                        <![CDATA[<script src="https://sdk.helloextend.com/extend-sdk-client/v1/extend-sdk-client.min.js"></script>]]>
                    </text>
                </action>
            </block>
        </reference>
        <reference name="content">
            <block type="warranty/lead" name="extend.warranty.lead" after="-" template="warranty/lead-warranty.phtml"/>
            <block type="warranty/installation" name="warranty_extend_intallation" template="warranty/installation.phtml"/>
        </reference>
    </cms_index_index>

    <catalog_product_view>
        <reference name="head">
            <block type="core/text" name="extend.sdk.client">
                <action method="setText" ifconfig="warranty/enableExtend/enable">
                    <text>
                        <![CDATA[<script src="https://sdk.helloextend.com/extend-sdk-client/v1/extend-sdk-client.min.js"></script>]]>
                    </text>
                </action>
            </block>
            <action method="addItem"  ifconfig="warranty/enableExtend/enable"><type>skin_js</type><name>js/warranty/bundle-warranties.js</name></action>
        </reference>
        <reference name="product.info.extrahint">
            <block type="warranty/init" name="extend.warranty.init" after="-" template="warranty/warranty.phtml"/>
        </reference>
        <reference name="content">
            <block type="warranty/installation" name="warranty_extend_intallation"
                   template="warranty/installation.phtml"/>
        </reference>
        <update handle="extend_warranty_installation"/>
    </catalog_product_view>
    <checkout_cart_index>
        <reference name="head">
            <block type="core/text" name="extend.sdk.client">
                <action method="setText" ifconfig="warranty/enableExtend/enable">
                    <text>
                        <![CDATA[<script src="https://sdk.helloextend.com/extend-sdk-client/v1/extend-sdk-client.min.js"></script>]]>
                    </text>
                </action>
            </block>
        </reference>
        <reference name="checkout.cart">
            <action method="addItemRender">
                <type>simple</type>
                <block>checkout/cart_item_renderer</block>
                <template>warranty/checkout/cart/item/default.phtml</template>
            </action>
            <action method="addItemRender">
                <type>configurable</type>
                <block>checkout/cart_item_renderer_configurable</block>
                <template>warranty/checkout/cart/item/default.phtml</template>
            </action>
            <action method="addItemRender">
                <type>bundle</type>
                <block>bundle/checkout_cart_item_renderer</block>
                <template>warranty/checkout/cart/item/default.phtml</template>
            </action>
        </reference>
        <update handle="extend_warranty_installation"/>
    </checkout_cart_index>

    <sales_order_view>
        <reference name="head">
            <block type="core/text" name="extend.sdk.client">
                <action method="setText" ifconfig="warranty/enableExtend/enable">
                    <text>
                        <![CDATA[<script src="https://sdk.helloextend.com/extend-sdk-client/v1/extend-sdk-client.min.js"></script>]]>
                    </text>
                </action>
            </block>
        </reference>
        <block type="core/text_list" name="additional.product.info" translate="label">
            <block type="warranty/sales_order_view_lead" name="warranty_lead"
                   template="warranty/order/view/item.phtml"/>
        </block>
        <update handle="extend_warranty_installation"/>
    </sales_order_view>

    <extend_warranty_installation>
        <reference type="content">
            <block type="warranty/installation" name="warranty_extend_intallation"
                   template="warranty/installation.phtml"/>
        </reference>
    </extend_warranty_installation>
</layout>
